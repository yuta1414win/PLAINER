# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_LIVE_ENABLED=true

# Cloud Run Configuration
PORT=8080
REGION=asia-northeast1

# Development / Local testing
# When true (or when GEMINI_API_KEY is empty), AI calls are mocked
# so the app works offline without external API access.
MOCK_AI=false

# API configuration
# Comma-separated list of allowed origins for cross-origin API access.
# Example: https://app.plainer.co.jp,https://dashboard.plainer.co.jp
API_ALLOWED_ORIGINS=*

# Auth / Collaboration
JWT_SECRET=change_me_for_prod
NEXTAUTH_URL=http://localhost:3000
WS_PORT=3001
NEXT_PUBLIC_WS_URL=http://localhost:3001
ACTION_SECRET=change_me_for_signed_actions
ENFORCE_ACTION_SIGNATURE=false
